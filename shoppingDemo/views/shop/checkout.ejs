<%- include('../includes/head.ejs') %>

    <!-- Main -->
    <div id="main">
        <div class="inner">
            <h1>Checkout</h1>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1>
                            <%= p.productId.title %>
                        </h1>
                        <h2>Quantity:
                            <%= p.quantity %>
                        </h2>
                    </li>
                    <% }) %>
            </ul>
            <br>
            <div class="centered">
                <h2>Total:
                    <%= totalSum %>
                </h2>
            </div>
            <div class="centered">
                <button id="order-btn" class="primary">Order</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe(process.env.STRIPE_PR_KEY);
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <%- include('../includes/footer.ejs') %>
        </div>
    </footer>

    </div>

    <!-- Scripts -->
    <%- include('../includes/scripts.ejs') %>

        </body>

        </html>